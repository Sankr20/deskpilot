<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 https://maven.apache.org/xsd/assembly-1.1.3.xsd">

  <id>dist</id>

  <formats>
    <format>zip</format>
  </formats>

  <!-- Zip content root folder -->
  <baseDirectory>deskpilot</baseDirectory>

  <!-- 1) Include shaded jar -->
  <files>
    <file>
      <source>${project.build.directory}/deskpilot.jar</source>
      <outputDirectory>/</outputDirectory>
      <destName>deskpilot.jar</destName>
    </file>
  </files>

  <!-- 2) Copy repo-root dist/* into zip root -->
  <fileSets>
    <fileSet>
      <directory>${maven.multiModuleProjectDirectory}/dist</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>deskpilot.cmd</include>
        <include>README.md</include>
      </includes>
      <!-- keep it simple on Windows; no fileMode -->
      <filtered>false</filtered>
    </fileSet>
  </fileSets>

</assembly>
