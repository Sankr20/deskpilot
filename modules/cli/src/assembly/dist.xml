<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 https://maven.apache.org/xsd/assembly-1.1.3.xsd">

  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>

  <!-- Zip content root folder -->
  <baseDirectory>deskpilot</baseDirectory>

  <files>
    <!-- The shaded jar produced by cli module (you set finalName=deskpilot) -->
    <file>
      <source>${project.build.directory}/deskpilot.jar</source>
      <outputDirectory>/</outputDirectory>
      <destName>deskpilot.jar</destName>
    </file>

    <!-- Copy launcher + README from repo root dist folder -->
    <file>
      <source>${project.basedir}/../../dist/deskpilot.cmd</source>
      <outputDirectory>/</outputDirectory>
      <destName>deskpilot.cmd</destName>
      <fileMode>0755</fileMode>
    </file>

    <file>
      <source>${project.basedir}/../../dist/README.md</source>
      <outputDirectory>/</outputDirectory>
      <destName>README.md</destName>
    </file>
  </files>

</assembly>
